.menu {
  /* Configuração geral do Menu */
	position: relative;
	font-family: Arial, Geneva, sans-serif;
	list-style:none;
	border:1px solid #F000FF;
	float:center;
	right: 0px auto;
	left:165px;
	top: -70px;
	height: 35px;
	width: 695px;
	
}

.menu li {
  /* Configuração dos ítens do menu Menu */
  border:1px solid #00F0FF;
  position:relative;
  display:block;
  height:30px;
  left:-30px;
 // float:left;
  color:#000000;
  // border-right:1px solid #c0c0c0; 
}
.menu a:hover {

  //color:#093;
  background-color:#b82101;
  height:20px;
}
.menu li a {
  /* Configuração do link do item do menu */
  // border: 1px solid red;
  color:#000000; 
  height:20px;
  font-size: 12px;
  color:#710c07;
  text-decoration:none; 
  padding:5px 3px 3px 3px;
  display:block;
}

.menu li a:hover {
  /* Configuração do ítem do menu selecionado pelo usuario */
  color:#FBFCFE; 
  //padding:1px 1px;
  /* Sombreamento do texto do menu */
 // -moz-box-shadow:0 1px 10px 0 #CCC; 
 // -webkit-box-shadow:0 3px 10px 0 #ccc; 
 // text-shadow:0px 0px 5px #fff; 
}

.menu ul a:hover {
  /* Configuração do ítem do sub-menu selecionado pelo usuario */
  // border:1px solid #000000;
  color:#710c07; 
  background-color:#FBFCFE;
}

.menu li ul {
  /* Configuração do sub-menu */
  position:absolute; 
  // border: 1px solid black;
  top:30px; 
 // background-color:#fbfcfe; 
  background-color:#b82101; 
  display:none;
  text-align:left;
  // width:250px;
  padding:5px 5px;
  // margin: 0px 0px 0px 0px;
}   

.menu li:hover ul, .menu li.over ul{
  display:block;
 // background-color:#b82101;
}

.menu li ul li {
  // border:1px solid #000000; 
  display:block; 
  left:-2px;
 // margin: 0px 0px 0px 0px;
  //width:110px;
 // float:left;
  background-position: center;
}
